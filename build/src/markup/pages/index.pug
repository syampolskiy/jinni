extends ../template

block any
	include ../blocks/menu/menu
	
block content
	.simple
		.container
			.row
				.col-md-7
					.simple__text
						p It's simple...
						h1 Jinni’s Affiliates make more than the others.
						p Jinni is expanding, that’s why we are offering 50% Rev-Share on your traffic right from the start.*
					.row
						a.simple-btn.simple-btn--white(href="#") commisions
						a.simple-btn.simple-btn--green(href="#") start now
				.col-md-5
					img.jinni-img(src=i + "", alt="")
	.what
		.container
			h2 What are we paying
			p There are 3 ways you can go:
			ul.nav.nav-tabs
				li.nav-item
					a.nav-link(href='#') Rev - share
				li.nav-item
					a.nav-link(href='#') CPA
				li.nav-item
					a.nav-link(href='#') Hybrid
			ul.what-content
				li.what-content__item
					.rev
						ul.total
							li.total__item
								.total__box
									.total__cptn First 3 months welcome bonus
									.total__percent 50%
							li.total__item
								.total__box
									.total__cptn NGR €0-500
									.total__percent 30%
							li.total__item
								.total__box
									.total__cptn NGR €500-1500
									.total__percent 35%
							li.total__item
								.total__box
									.total__cptn NGR €1500-3500
									.total__percent 40%
							li.total__item
								.total__box
									.total__cptn NGR over €3500
									.total__percent 45%
						.rev-text
							p Sign up to receive 50% Rev-share on your traffic
						.rev-btn-wr
							a.simple-btn.simple-btn--green(href="#") start now
				li.what-content__item
					.what-box
						h4 Custom CPA deals are possible.
						p We welcome every deal as long as both parties are fully satisfied.<br>Contact us today and our affiliate manager will gladly discuss your CPA deal with you.
						p
							a.simple-btn.simple-btn--green(href="#") let's talk
				li.what-content__item
					.what-box
						h4 Custom hybrid deals are possible.
						p We welcome every deal as long as both parties are fully satisfied.<br>Contact us today and our affiliate manager will gladly discuss your hybrid deal with you.
						p
							a.simple-btn.simple-btn--green(href="#") let's talk
		
		.container
			hr
		.your
			.container
				h2 Your conversion tools
				p Constantly optimizing conversion on every step:
				.row.your__list
					.col-md-3
						.your__img
							img(src=i + "", alt="")
						h4 LPs & Ads
						p We are continually creating new marketing materials for our affiliates so you can improve your conversion rates and grow your business.
					.col-md-3
						.your__img
							img(src=i + "", alt="")
						h4 Emails
						p We make sure your  traffic is always aware of our exclusive offers with personalized and automated email cycles.
					.col-md-3
						.your__img
							img(src=i + "", alt="")
						h4 Website
						p We constantly monitor and optimize our website to deliver a User Experience designed to up-sell your traffic.
					.col-md-3
						.your__img
							img(src=i + "", alt="")
						h4 Agents
						p Our dedicated Customer Support agents are here to help you reach even the most  "Hard-to-Get" clients.
		.container
			hr
		.chance
			.container
				h2 This is your chance to maximize your epic 50% rev-share on your traffic
				.start-btn-wr
					a.simple-btn.simple-btn--green(href="#") start now
	.join
		.container
			h2 Want to join our affiliate program?
			p
				| Have a question in mind?
				span Let’s talk
				| :
			.join-form-wr
				form(action="").join-form
